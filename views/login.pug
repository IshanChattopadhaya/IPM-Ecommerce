doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login
    link(rel="stylesheet" href="/static/login_style.css")

  body
    .container
      h2 Login
      form#loginForm(onSubmit="handleLogin(event)")
        label(for="email") Email
        input(type="email" id="loginEmail" name="email" required)
        
        label(for="password") Password
        input(type="password" id="loginPassword" name="password" required)
        
        button(type="submit") Login

      p Don't have an account?
      button#signupBtn(onclick="toggleForms()") Sign up

      form#signupForm.hidden(onSubmit="handleSignup(event)")
        h2 Sign Up
        label(for="email") Email
        input(type="email" id="signupEmail" name="email" required)
        
        label(for="password") Password
        input(type="password" id="signupPassword" name="password" required)
        
        button(type="submit") Sign Up
      p Already have an account?
      button#loginBtn.hidden(onclick="toggleForms()") Login

    script(src="/static/login_script.js")

