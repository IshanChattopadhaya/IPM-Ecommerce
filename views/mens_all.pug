doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Men's All Items
    link(rel='stylesheet' href='/static/mens_all.css')

  body
    // Navbar
    nav.navbar
      .dropdown
        button.dropbtn Categories
        .dropdown-content
          a(href='/mens_cloth') Men's Clothing
          a(href='/women_cloth') Women's Clothing
          a(href='#') Kids' Clothing
          a(href='#') Footwear
          a(href='#') Electronic Devices
          a(href='#') Groceries
          a(href='#') Home Decor
          a(href='#') Kitchenware
          a(href='#') Books
      a(href='/') Home
      a(href='/cart') Cart
      a(href='/loginpage') Sign In

    // Search Bar
    .search-bar
      form(action="/search" method="GET")
        input(type="text" name="query" placeholder="Search for products")
        button(type="submit") Search

    // Promotional Banners or Dynamic Heading
    section.mens-heading
      .heading
        if query
          h2 Showing results for "#{query}" in Men’s Fashionista
        else
          h2 Search all in Men's Fashionista

    // Items Container
    .items-container
      if items.length
        each item in items
          .item
            img.item-image(src=item.image alt=item.name)
            .item-details
              h2= item.name
              p= item.description
              p.price Price: ₹#{item.price}
              button.add-to-cart +
      else
        p No items found matching "#{query}"

    // Review Button Section
    .review-section
      a(href='/reviews')
        button.review-button Product Reviews

    // Footer
    footer.footer
      p &copy; 2024 Sample Store - All rights reserved
      a(href='#') Help
      a(href='#') Contact
      a(href='#') Privacy

    script(src='/static/mens_all_script.js')